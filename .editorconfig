root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 4

[*.{html}]
indent_style = space
indent_size = 2

[*.{json,yml}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[.eslintrc,.babelrc]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
